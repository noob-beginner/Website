<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Dynamic Website</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
    integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link rel="stylesheet" href="/static/css/styles.css">
</head>

<body>
  {{>navbar data=details}}

  {{>slider Slides=Slides}}


  {{!-- Banner-1 section --}}
  <section class="banner1_section py-5 background1">

    <div class="container text-center">
      <div class="row">
        {{#each banner1}}
        <div class="col-md-12">
          <h1>{{this.title}}</h1>
          <p>
            {{this.description}}
          </p>
          <button class="btn btn-outline-primary">{{this.buttonText}}</button>
          {{/each}}
        </div>
      </div>
    </div>

  </section>

  {{!-- Services Section --}}

  <section id="services_section" class="py-3">
    <div class="container">
      <h1 class="text-center text-secondary">Services that we provide</h1>

      <div class="row mt-5">
        {{!-- first service column --}}
        {{#each services}}
        <div class="col-md-4">
          <div class="card">
            <div class="card-body">
              <div class="container text-center py-3">
                <i class="{{this.icon}} service_icon"></i>
              </div>
              <h5 class="card-title">{{this.title}}</h5>
              <p>{{this.description}}</p>
              <a href="{{this.link}}">{{this.linkText}}</a>
              <a href="#!" class="ml-3">Support</a>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </section>


  {{!-- Banner-2 Section --}}


  <section class="banner2_section py-5">
    <div class="container">
      <div class="row">
        {{#each banner2}}
        <div class="col-md-6 text-center pt-5">
          {{!-- Left Side --}}
          <h3>
            {{this.title}}
          </h3>
          <p>
            {{this.description}}
          </p>
          <button class="btn btn-primary">
            {{this.buttonText}}
          </button>
        </div>
        <div class="col-md-6 text-center">
          {{!-- Right Side --}}
          <img style="width: 300px; max-height:300px;" class="img-fluid" src="{{this.imgURL}}" alt="image">
          {{/each}}
        </div>
      </div>
    </div>
  </section>

  {{!-- Banner-3 Section --}}

  <section class="banner3_section py-5">
    <div class="container">
      <div class="row">
        {{#each banner3}}
        <div class="col-md-6 text-center">
          {{!-- Left Side --}}
          <img style="width: 300px; max-height:300px;" class="img-fluid" src="{{this.imgURL}}" alt="image">
        </div>

        <div class="col-md-6 text-center pt-5">
          {{!-- Right Side --}}
          <h3>
            {{this.title}}
          </h3>
          <p>
            {{this.description}}
          </p>
          <button class="btn btn-primary">
            {{this.buttonText}}
          </button>
        </div>
        {{/each}}
      </div>
    </div>
  </section>


  {{!-- Contact Us Section --}}

  <section id="contact_us_section" class="py-5 background1">
    <div class="container">
      <h3 class="text-center text-secondary">Contact Us</h3>
      <div class="row">
        <div class="col-md-12">


          <form action="/process-contact-form" method="post">
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label">Your e-mail address</label>
              <input name="email" type="email" class="form-control" id="exampleInputEmail1"
                aria-describedby="emailHelp">
              <div id="emailHelp" class="form-text text-secondary">We'll never share your email with anyone else.</div>
            </div>

            <div class="mb-3">
              <label for="contactNumberField" class="form-label">Your Contact Number</label>
              <input name="phone" type="number" class="form-control" id="contactNumberField">
            </div>

            <div class="form-floating my-2">
              <textarea name="query" style="height: 250px" class="form-control" placeholder="Enter your Query Here!"
                id="queryField"></textarea>
              <label for="queryField">Your Query</label>
            </div>

            <div class="container text-center">
              <button type="submit" class="btn btn-dark">Submit</button>
            </div>
          </form>


        </div>
      </div>
    </div>
  </section>


  {{!-- About Us Section --}}

  <section id="about_section" class="about_section py-5">
    <div class="container text-center">
      <div class="row">
        <div class="col md-12">
          <h3>About Us</h3>
          {{#each abou}}
          <p>
            {{this.content}}
          </p>
          {{/each}}
          <button class="btn btn-success btn-lg" onClick="scrollToContactUsSection()">
            Contact Us
          </button>
          <script>
            function scrollToContactUsSection() {
              var contactUsSection = document.getElementById('contact_us_section');
              contactUsSection.scrollIntoView({
                behavior: 'smooth'
              });
            }
          </script>
        </div>
      </div>
    </div>
  </section>


  {{!-- Footer Section --}}
  <footer class="footer background1 text-center py-5">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          @2023 Copyright: <span>Infitech Pvt.Ltd.</span>
        </div>
      </div>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"></script>
</body>

</html>